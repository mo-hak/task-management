# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/task_management?schema=public

# Authentication
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRATION=24h

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@taskmanagement.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Documentation
SWAGGER_TITLE=Task Management API
SWAGGER_DESCRIPTION=Enterprise Task Management Platform API Documentation
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs 